package br.com.fiap.BO.impl;

import java.rmi.RemoteException;

import br.com.fiap.BO.CalculadoraBO;

public class CalculadoraBOImpl implements CalculadoraBO {

	@Override
	public int somar(int i, int j) throws RemoteException {
		// TODO Auto-generated method stub
		return i+j;
	}

	@Override
	public int faorial(int i) throws RemoteException {
//	for(int x=i-1;x>0;x--) {
	//	i*=x;
//	}
	return i==1?1:fatorial(i-1)*1;
	}
	
	

}
